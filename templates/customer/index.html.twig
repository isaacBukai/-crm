{% extends 'base.html.twig' %}


{% block stylesheets %}
    {{ parent() }}
    <style>
        body{
            color: red;

        }
    </style>
{% endblock %}

{% block body %}
    this is customer table

    <table>
        {% for customer in customers %}
            <tr>
                <td>{{ customer.name }}</td>
                <td>{{ customer.fax }}</td>
                <td>{{ customer.email }}</td>
                <td>{{ customer.mobile }}</td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}